<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".categoy">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="45dp"
        android:layout_marginTop="90dp"
        android:layout_marginEnd="45dp"
        app:srcCompat="@drawable/topic" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageView"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="55dp"
        android:layout_marginTop="17dp"
        android:layout_marginEnd="55dp"
        android:text="SELECT "
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="30sp"
        android:textStyle="bold" />


    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView5"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="55dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="55dp"
        android:text="TOPIC "
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="30sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/btndesign"
        android:layout_width="125dp"
        android:layout_height="121dp"
        android:layout_below="@+id/textView6"
        android:layout_alignParentStart="true"
        android:layout_marginStart="45dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/btntopleft"
        android:text="OOPS"
        android:textColor="@color/white"
        android:textSize="15sp" />

    <Button
        android:id="@+id/btncyber"
        android:layout_width="125dp"
        android:layout_height="121dp"
        android:layout_below="@+id/textView6"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="11dp"
        android:layout_marginEnd="49dp"
        android:background="@drawable/button_mainactivity"
        android:text="BACK END"
        android:textColor="@color/white"
        android:textSize="15sp" />

    <Button
        android:id="@+id/btnmobdev"
        android:layout_width="125dp"
        android:layout_height="121dp"
        android:layout_below="@+id/btndesign"
        android:layout_alignParentStart="true"
        android:layout_marginStart="44dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/btnbottomleft"
        android:text="ANDROID"
        android:textColor="@color/white"
        android:textSize="15sp" />

    <Button
        android:id="@+id/btnwebdev"
        android:layout_width="125dp"
        android:layout_height="121dp"
        android:layout_below="@+id/btncyber"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="21dp"
        android:layout_marginEnd="46dp"
        android:background="@drawable/btnbottomright"
        android:text="FRONT END"
        android:textColor="@color/white"
        android:textSize="15sp" />

</RelativeLayout>